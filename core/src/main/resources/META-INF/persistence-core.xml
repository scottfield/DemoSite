<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
             
    <persistence-unit name="blPU" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/web</non-jta-data-source>
        <mapping-file>com/cdfamedy/core/domain/impl/mapping/Shop.orm.xml</mapping-file>
        <mapping-file>com/cdfamedy/core/domain/impl/mapping/Coupon.orm.xml</mapping-file>
        <mapping-file>com/cdfamedy/core/domain/impl/mapping/CustomerAttribute.orm.xml</mapping-file>
        <mapping-file>com/cdfamedy/core/domain/impl/mapping/CustomOrder.orm.xml</mapping-file>
        <mapping-file>com/cdfamedy/core/domain/impl/mapping/FiveCard.orm.xml</mapping-file>
        <mapping-file>com/cdfamedy/core/domain/impl/mapping/QRCode.orm.xml</mapping-file>
        <class>com.cdfamedy.core.domain.impl.CustomProductImpl</class>
        <class>com.cdfamedy.core.domain.impl.ShopImpl</class>
        <class>com.cdfamedy.core.domain.impl.CustomAddressImpl</class>
        <class>com.cdfamedy.core.domain.impl.QRCodeImpl</class>
        <class>com.cdfamedy.core.domain.impl.ShopAccountImpl</class>
        <class>com.cdfamedy.core.domain.impl.FiveCardImpl</class>
        <class>com.cdfamedy.core.domain.impl.CustomCustomerImpl</class>
        <class>com.cdfamedy.core.domain.impl.CustomerFiveCardXrefImpl</class>
        <class>com.cdfamedy.core.domain.impl.CouponImpl</class>
        <class>com.cdfamedy.core.domain.impl.CustomerCouponXrefImpl</class>
        <class>com.cdfamedy.core.domain.impl.CustomOrderImpl</class>
        <exclude-unlisted-classes/>
    </persistence-unit>
    
    <persistence-unit name="blSecurePU" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/webSecure</non-jta-data-source>
        <exclude-unlisted-classes/>

    </persistence-unit>

    <persistence-unit name="blCMSStorage" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/cmsStorage</non-jta-data-source>
        <exclude-unlisted-classes/>
    </persistence-unit>
</persistence>
