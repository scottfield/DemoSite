<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
             
    <persistence-unit name="blPU" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/web</non-jta-data-source>
        <class>com.cdfamedy.core.catalog.domain.CustomProductImpl</class>
        <class>com.cdfamedy.core.catalog.domain.ShopImpl</class>
        <class>com.cdfamedy.core.catalog.domain.CustomAddressImpl</class>
        <class>com.cdfamedy.core.catalog.domain.QRCodeImpl</class>
        <class>com.cdfamedy.core.catalog.domain.ShopAccountImpl</class>
        <class>com.cdfamedy.core.catalog.domain.FiveCardImpl</class>
        <class>com.cdfamedy.core.catalog.domain.CustomCustomerImpl</class>
        <class>com.cdfamedy.core.catalog.domain.CustomerFiveCardXrefImpl</class>
        <class>com.cdfamedy.core.catalog.domain.CouponImpl</class>
        <class>com.cdfamedy.core.catalog.domain.CustomerCouponXrefImpl</class>
        <class>com.cdfamedy.core.catalog.domain.CustomOrderImpl</class>
        <exclude-unlisted-classes/>
    </persistence-unit>
    
    <persistence-unit name="blSecurePU" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/webSecure</non-jta-data-source>
        <exclude-unlisted-classes/>

    </persistence-unit>

    <persistence-unit name="blCMSStorage" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/cmsStorage</non-jta-data-source>
        <exclude-unlisted-classes/>
    </persistence-unit>
</persistence>
